<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.F1Tracker"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait"
        tools:targetApi="31">
        <activity
            android:name=".InterfacesApp.InicioAplicacion"
            android:exported="false"
            android:label="@string/title_activity_inicio_aplicacion"
            android:theme="@style/Theme.F1Tracker" />
        <activity
            android:name=".InterfacesApp.CalendarioActivity"
            android:exported="false"
            android:label="@string/title_activity_calendario"
            android:theme="@style/Theme.F1Tracker" />
        <activity
            android:name=".InterfacesApp.EscuderiasActivity"
            android:exported="false"
            android:label="@string/title_activity_escuderias"
            android:theme="@style/Theme.F1Tracker" />
        <activity
            android:name=".InterfacesApp.PilotosActivity"
            android:exported="false"
            android:label="@string/title_activity_pilotos"
            android:theme="@style/Theme.F1Tracker" />
        <activity
            android:name=".InterfacesApp.CircuitosActivity"
            android:exported="false"
            android:label="@string/title_activity_circuitos"
            android:theme="@style/Theme.F1Tracker" />
        <activity
            android:name=".InterfacesApp.MenuPrinicipal"
            android:exported="false"
            android:label="@string/title_activity_menu_prinicipal"
            android:theme="@style/Theme.F1Tracker" />
        <activity
            android:name=".InterfacesApp.AutenticacionActivity"
            android:exported="true"
            android:theme="@style/Theme.F1Tracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>